<%- include ('../partials/head') %>
<%- include ('../partials/menu') %>

<main>
    <div style="position: absolute; left: 50%; transform: translateX(-72%);">
        <div class="container" style="width: 150%;">

        <%- include ('../partials/message') %>
        
        <h2 style="margin-top: 15px;">Register</h2>
        <form action="/register" method="POST">
            <div class="form-group" style="margin-bottom: 15px;">
            <label for="email">CU Email</label>
            <input type="text" class="form-control" id="email" name="email" required />
            </div>
            <div class="form-group" style="margin-bottom: 15px;">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" required />
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        <p style="margin-top: 15px;">Already have an account? <a href="/login">Login</a></p>
        </div>
    </div>
</main>
  
<%- include ('../partials/footer') %>